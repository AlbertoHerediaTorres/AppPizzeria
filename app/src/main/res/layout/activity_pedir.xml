<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="es.albertoheredia.apppizzeria.MainActivity">


    <Button
        android:id="@+id/btnRecoger"
        style="@style/EstiloBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:text="@string/pea_btn_recoger" />

    <Button
        android:id="@+id/btnDomicilio"
        style="@style/EstiloBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnRecoger"
        android:layout_alignLeft="@+id/btnRecoger"
        android:layout_alignRight="@+id/btnRecoger"
        android:layout_alignStart="@+id/btnRecoger"
        android:layout_below="@+id/btnRecoger"
        android:layout_marginTop="86dp"
        android:text="@string/pea_btn_domicilio" />


</RelativeLayout>